<Window x:Class="TASCompAssistant.DQReasonsEditor"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:TASCompAssistant"
		mc:Ignorable="d"
		Title="DQReasonsEditor" Height="350" Width="400">
	<Grid>
		<Grid.ColumnDefinitions>
			<!-- This is padding -->
			<ColumnDefinition Width="10" />
			<ColumnDefinition Width="80" />
			<ColumnDefinition Width="120" />
			<ColumnDefinition Width="*" />
			<!-- This is padding -->
			<ColumnDefinition Width="10" />
		</Grid.ColumnDefinitions>
		
		<Grid.RowDefinitions>
			<!-- This is padding -->
			<RowDefinition Height="10" />
			<RowDefinition Height="15" />
			<RowDefinition Height="20" />
			<RowDefinition Height="*" />
			<!-- This is padding -->
			<RowDefinition Height="10" />
		</Grid.RowDefinitions>

		<!-- Row 0 -->
		
		<!-- Row 1 -->
		<TextBlock Text="Select Profile:" 
				   Grid.Row="1" 
				   Grid.Column="1"/>
		
		<ComboBox x:Name="combobox_DQProfiles" Text="Profile..."
				  Grid.Row="1" 
				  Grid.Column="2" 
				  Margin="0,-2"
				  IsReadOnly="True"
				  IsEditable="True"/>

	</Grid>
</Window>
